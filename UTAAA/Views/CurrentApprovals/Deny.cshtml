@model UTAAA.Models.ApprovalModel

@{
    Layout = "~/Views/Shared/HideTabLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div id="center">
        <h3>Confirm Denial:</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.REASON_OF_DENIAL)
            @Html.EditorFor(model => model.REASON_OF_DENIAL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.REASON_OF_DENIAL, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-default" />  
        </div>
    </div>
}

<h3 id="center">@Html.ActionLink("BACK", "Index", "Site")</h3>

