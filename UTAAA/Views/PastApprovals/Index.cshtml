@model IEnumerable<UTAAA.Models.RequestModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.REQUESTDATE)
        </th>
        <th>
            Employee
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SCLASSDESC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.REQTYPE_DESC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.REQUESTSTATUS_DESCRIPTION)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.REQUESTSTATUS_DESCRIPTION != "Pending") //Display completeted requests
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.REQUESTDATE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FIRST_NAME)
                    @Html.DisplayFor(modelItem => item.LAST_NAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SCLASSDESC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.REQTYPE_DESC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.REQUESTSTATUS_DESCRIPTION)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    }

</table>
